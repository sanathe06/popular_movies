<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/cardview_elevation">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_grid_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_film_real"
            android:contentDescription="@string/content_description_poster" />

        <TextView
            style="@style/AppTheme.Movie.Item.Text"
            android:drawableStart="@drawable/ic_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movie_item_rating_textview"
            tools:text="8.5/10" />
    </FrameLayout>
</android.support.v7.widget.CardView>